model Category {
    id Int @id @default(autoincrement()) @map("category_id")
    name String @map("name") // Can't use @db.VarChar(50) due to "Native type VarChar is not supported for sqlite connector."
    createdAt DateTime @default(now()) @map("created_at") // In the SDD document, the Data Dictionary signifies that it [1] accepts null values [2] it is not required.
    updatedAt DateTime @updatedAt @map("updated_at") // In the SDD document, the Data Dictionary signifies that it [1] accepts null values [2] it is not required.

    // Relations

    @@map("categories")
}
