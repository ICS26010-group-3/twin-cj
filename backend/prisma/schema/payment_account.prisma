model PaymentAccount {
    id            Int      @id @default(autoincrement()) @map("payment_account_id")
    accountName   String   @map("account_name")
    accountNumber Int      @map("account_number")
    createdAt     DateTime @default(now()) @map("created_at")
    updatedAt     DateTime @updatedAt @map("updated_at")

    // Relations
    transactions   Transaction[]    @relation("TransactionPaymentAccount")

    paymentMethod  PaymentMethod?   @relation(fields: [paymentMethodId], references: [id], name: "PaymentMethodPaymentAccount")
    paymentMethodId Int?            @map("payment_method_id")

    @@map("payment_accounts")
}
