model Cabin {
  id              Int       @id @default(autoincrement()) @map("cabin_id")
  serviceId       Int       @map("service_id")
  minCapacity     Int       @map("min_capacity")
  maxCapacity     Int       @map("max_capacity")
  additionalFeeId Int?      @unique @map("additional_fee_id")

  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  

  // Relations
  service        Service       @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  additionalFee  AdditionalFee? @relation(fields: [additionalFeeId], references: [id], onDelete: Cascade)

  @@map("cabins")
}
