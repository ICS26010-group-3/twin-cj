model DayTourActivities {
    id        Int      @id @default(autoincrement()) @map("day_tour_activity_id")
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    // Relation
    service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
    serviceId Int     @unique

    additionalFee   AdditionalFee? @relation(fields: [additionalFeeId], references: [id], onDelete: Cascade)
    additionalFeeId Int?           @unique

    @@map("day_tour_activities")
}
